{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#deals",
      "flex-layout.row#newsletter",
      "flex-layout.row#metodospago",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },

  "flex-layout.row#newsletter":{
    "children":[
      "flex-layout.col#contenedor"      
    ],"props":{
      "blockClass":"rownews"
    }
    
  },
  
  
  
  "flex-layout.col#contenedor":{
    "children":[
      "flex-layout.row#rownotfw"
    ]
  },"flex-layout.row#rownotfw":{
    "children":[
      "flex-layout.col#textnews",
      "flex-layout.col#contnews"
    ]
  },

  "flex-layout.col#textnews":{
    "children":[
      "rich-text#txtnews"
    ],"props":{
      "verticalAlign":"middle",
      "horizontalAlign":"center",
      "width":"30%"
    }
  },"rich-text#txtnews":{
    "props":{
      "text":"Recibe noticias \n de nuestros productos",
      "blockClass":"txtnews"
    }
  },

  "flex-layout.col#contnews":{
    "children":[
      "newsletter"
    ],"props":{
      "verticalAlign":"middle",
      "width":"70%"
    }
  },

  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#logos1",
      "flex-layout.col#mencatsfoo",
      "vtex.menu@2.x:menu#footer-decoration"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3,
      "colSizing":"auto"
    }
  },

  "flex-layout.col#mencatsfoo":{
    "children":[
      "flex-layout.row#rowcontcats"
    ],"props":{
      "blockClass":"conmenus",
      "width":"grow",
      "paddingLeft":10,
      "paddingRight": 10
    }
  },
  "flex-layout.row#rowcontcats":{
    "children":[
      "flex-layout.col#cat1",
      "flex-layout.col#cat2",
      "flex-layout.col#cat3"
    ],"props":{
      "blockClass":"rowmenconts",
      "colSizing":"equal"
    }
  },

  "flex-layout.col#cat1":{
    "children":[
      "vtex.menu@2.x:menu#categorias"
    ]
  },

  "flex-layout.col#cat2":{
    "children":[
      "vtex.menu@2.x:menu#bicis"
    ],"props":{
      "blockClass":"colmensfoo",
      "paddingLeft":5
    }
  },

  "flex-layout.col#cat3":{
    "children":[      
      "vtex.menu@2.x:menu#politicas"
    ],"props":{
      "blockClass":"colmensfoo",
      "paddingLeft":5
    }
  },

 

  "flex-layout.row#footer-2-desktop": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  


 

  "flex-layout.col#logos1": {
    "children": [
      "image#logos1"
    ],
    "props": {
      "blockClass": "logo1",
      "verticalAlign": "middle"
    }
  },
  "image#logos1": {
    "props": {
      "src": "/arquivos/logo-blanco.png",
      "blockClass" : "logob1"
    }
  },
  
  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "BICIMUNDO MX 2021 - Todos los derechos reservados",
      "blockClass": "footer",
      "textAlign": "center"
    }
  },


   
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#deals",
      "flex-layout.row#newslettermobile",
      "flex-layout.row#metodospagomobile",
      "flex-layout.row#metodospagomobile2",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-socialLogos",
      "flex-layout.row#metodoMobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },

  "flex-layout.row#metodospagomobile":{
    "children":[
      "image#mp1",
      "image#mp2",
      "image#mp3"
    ],"props":{
      "preserveLayoutOnMobile":true,
      "marginTop": 7,
      "blockClass":"rowpay",
      "fullWidth":true
    }
  },
  "flex-layout.row#metodospagomobile2":{
    "children":[
      "image#mp4",
      "image#mp5",
      "image#mp6"
    ],"props":{
      "preserveLayoutOnMobile":true,
      "marginTop":7,
      "marginBottom":7,
      "blockClass":"rowpay",
      "fullWidth":true
    }
  },

  "flex-layout.row#newslettermobile":{
    "children":[
      "flex-layout.col#contnws"
    ],"props":{
      "fullWidth":true,
      "blockClass":"rownewsmob"
    }
  },"flex-layout.col#contnws":{
    "children":[
      "rich-text#txtnews",
      "newsletter"
    ],"props":{
      "horizontalAlign":"center",
      "blockClass":"colnewsmob"
    }
  },

  "flex-layout.row#metodoMobile": {
    "children": [
      "flex-layout.col#metod1","flex-layout.col#metod2"
    ],
    "props": {
      "blockClass":"footermob",
      "preserveLayoutOnMobile":true,
      "fullWidth":true
    }
  },

  "flex-layout.col#metod1": {
    "children": [
      "image#metod1"
    ],
    "props": {
      "blockClass": "metodo1",
      "horizontalAlign":"center"
    }
  },
  "image#metod1": {
    "props": {
      "src": "/arquivos/l2.png",
      "blockClass" : "logoPuntoCommerce"
    }
  },
  "flex-layout.col#metod2": {
      "children": [
        "image#metod2"
      ],
      "props": {
        "blockClass": "metodo2",
        "horizontalAlign":"center"
      }
    },
    "image#metod2": {
      "props": {
        "src": "/arquivos/l1.png",
        "blockClass" : "metod2"
      }
    },
  "flex-layout.row#2-footer-socialLogos": {
    "children": ["flex-layout.col#socialLogo1", "flex-layout.col#socialLogo2"],
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4,
      "blockClass":"footermob",
      "preserveLayoutOnMobile":true,
      "verticalAlign":"middle",
      "fullWidth":true
    }
  },

  "flex-layout.col#socialLogo1": {
    "children": [
      "flex-layout.row#credes"
    ],
    "props" : {
      "blockClass" : "socialLogo1"
    }

  },

  "flex-layout.col#socialLogo2": {
    "children": [
      "flex-layout.row#redess"
    ],
    "props" : {
      "blockClass" : "socialLogo2"
    }
  },

  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass":"footermobderechos",
      "paddingTop": 4,
      "paddingBottom": 4,
      "fullWidth":true
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4,
      "blockClass":"footermob",
      "fullWidth":true
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
     "text": "BICIMUNDO MX 2021 - Todos los derechos reservados",
      "blockClass": "footer",
      "textAlign": "center"
      }
  },
"flex-layout.row#metodospago":{
  "children":[
    "image#mp1",
    "image#mp2",
    "image#mp3",
    "image#mp4",
    "image#mp5",
    "image#mp6"
  ],"props":{
    "verticalAlign":"middle",
    "colSizing":"auto",
    "marginTop": 8,
    "marginBottom": 8,
    "blockClass":"rowmetodos"
  }
},
"image#mp1":{
  "props":{
    "maxHeight": "82px",
    "src":"assets/paypal.png",
    "blockClass":"mpmob"
  }
},
"image#mp2":{
  "props":{
    "maxHeight": "82px",
    "src":"assets/mastercard.png",
    "blockClass":"mpmob"
  }
},
"image#mp3":{
  "props":{
    "maxHeight": "82px",
    "src":"assets/visa.png",
    "blockClass":"mpmob"
  }
},
"image#mp4":{
  "props":{
    "maxHeight": "82px",
    "src":"assets/mercadop.png",
    "blockClass":"mpmob"
  }
},
"image#mp5":{
  "props":{
    "maxHeight": "82px",
    "src":"assets/oxxo.jpg",
    "blockClass":"mpmob"
  }
},
"image#mp6":{
  "props":{
    "maxHeight": "82px",
    "src":"assets/banamex.png",
    "blockClass":"mpmob"
  }
}

}
